<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:id="@+id/txt_dialog_dieta_titulo"
        android:text="Dieta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Tornar Ativa"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/baseline_check_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Refeições"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:id="@+id/txt_dieta_refeicoes"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/baseline_room_service_white_48" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Compartilhar"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/baseline_share_24_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Editar"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/baseline_create_24_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Excluir"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/baseline_clear_24" />
    </LinearLayout>
</LinearLayout>